<% include header %>
<div class="pure-g">
  <div class="pure-u-3-4 pure-u-sm-13-24 articles">
    <h3>Articles about <%- categorieen[id] %></h3>
      <% for (var i = 0; i < items.length; i++) { %>
        <% if (items[i].category.indexOf(categorieen[id]) !== -1) { %>
          <section>
              <div class="pure-u-1 pure-u-sm-1-4 article-image">
                <img src="/img/<%- items[i].photo1 %>" alt="<%- items[i].title %>">
              </div>
              <div class="pure-u-1 pure-u-sm-7-12">
                <h2>
                  <a class="article-link" href=/items/<%- items[i].id %>><%- items[i].title %></a>
                </h2>
                <p><%- items[i].date %></p>
                <p>
                  <%- items[i].summary %>
                </p>
              </div>
          </section>
        <% } %>
      <% } %>
  </div>
</div>
<% include footer %>
